.t-Search
    padding-left 2em
    padding-right 2em
    padding-top 1em
    .t-Search-Panel
        padding-bottom 1em
        overflow-y auto
        .t-Search-Panel-Body
            textarea
                margin-top 1em
                width 100%
            .t-Search-Form-Search-Btn
                cursor pointer
    .t-Search-Iframe-Wrapper
        div[role="tabpanel"]
            .tab-content
                height 90%
                .t-Search-Table-Tab
                    padding 1em
        .t-Search-Iframe
            width 100%
            height 100%
            border-left 1px solid rgb(221, 221, 221)
            border-right 1px solid rgb(221, 221, 221)
            border-bottom 1px solid rgb(221, 221, 221)



.disabledTab
    pointer-events: none;


.btn-file
    position relative
    overflow hidden

.btn-file input[type=file]
    position absolute
    top 0
    right 0
    min-width 100%
    min-height 100%
    font-size 100%
    text-align right
    opacity 0
    outline none
    background white
    cursor inherit
    display block
